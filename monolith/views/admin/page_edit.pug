extends _layout

block content
  form(method='POST' class='edit-form')
    .save-bar
      button(type='submit') Guardar
      button(class='delete') Eliminar
    input(value=title name='title' class='title-input')
    input(value=(url || title) name='url' class='url-input')
    input(value=body name='body' type='hidden')
    article!= body

block scripts
  script(src='//cdn.quilljs.com/1.3.6/quill.min.js')
  script(src='/js/pages.js')

block stylesheets
  link(href='//cdn.quilljs.com/1.3.6/quill.bubble.css' rel='stylesheet')
